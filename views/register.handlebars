
<div class="container mt-5">
        <form action="/api/session/register" method="post">
            <div class="mb-3">
                <input type="text" class="form-control" name="first_name" required placeholder="Escriba su nombre">
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" name="last_name" required placeholder="Escriba su apellido">
            </div>
            <div class="mb-3">
                <input type="number" class="form-control" name="age" required placeholder="Escriba su edad">
            </div>
            <div class="mb-3">
                <input type="email" class="form-control" name="email" placeholder="Escriba su email">
            </div>
            <div class="mb-3">
                <input type="number" class="form-control" name="phone" required placeholder="Escriba su teléfono">
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" name="password" required placeholder="Escriba su contraseña">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">REGISTRAR</button>
            </div>
        </form>
    </div>